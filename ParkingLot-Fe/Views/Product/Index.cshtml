@model IEnumerable<ParkingLot_Fe.Models.ProductVM>

@{
    ViewData["Title"] = "Index";
}


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách sản phẩm</h3>
        @* <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div> *@
    </div>
    <div class="card-body">
        <p>
            <a asp-action="Post">Create New</a>
        </p>
        <table id="example1" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="width: 10%">STT</th>
                    <th style="width: 20%">Tên sản phẩm</th>
                    <th style="width: 20%">Giá</th>
                    <th style="width: 30%">Số lượng</th>
                    <th style="width: 20%">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int stt = 1; // Initialize counter for STT
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@stt</td> <!-- Display counter -->
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td class="project-actions text-center">
                            @* <a class="btn btn-primary btn-sm" href="@Url.Action("Get", new { id = item.Id })">
                                <i class="fas fa-folder"></i> View
                            </a>
                            <a class="btn btn-info btn-sm" href="@Url.Action("Update", new { id = item.Id })">
                                <i class="fas fa-pencil-alt"></i> Edit
                            </a> *@
                            <a class="btn btn-primary btn-sm btn-view" data-id="item.Id" href="javascript:void(0)">
                                <i class="fas fa-folder"></i> Xem
                            </a>
                            <a class="btn btn-info btn-sm btn-edit" data-id="item.Id" href="javascript:void(0)">
                                <i class="fas fa-pencil-alt"></i> Sửa
                            </a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete",  new { id = item.Id })">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                    stt++; // Increment counter
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("_ModalPartial")



@section Scripts {
    <script>
        // Hiển thị modal và load nội dung qua AJAX
        function loadModal(title, url) {
            $('#modalTemplateLabel').text(title); // Đặt tiêu đề modal
            $('#modalBody').html('<div class="text-center"><div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div></div>'); // Loading spinner

            // Gửi AJAX request
            $.ajax({
                url: url,
                type: 'GET',
                success: function (result) {
                    $('#modalBody').html(result); // Đổ nội dung vào modal
                },
                error: function (xhr) {
                    $('#modalBody').html('<p class="text-danger">Đã xảy ra lỗi: ' + xhr.responseText + '</p>'); // Hiển thị lỗi nếu xảy ra
                }
            });

            $('#modalTemplate').modal('show'); // Hiển thị modal
        }

        // Xử lý sự kiện click View
        $(document).on('click', '.btn-view', function () {
            var productId = $(this).data('id');
            var url = '/Product/Get/' + productId;
            loadModal('Chi tiết sản phẩm', url); // Tải modal với nội dung chi tiết
        });

        // Xử lý sự kiện click Edit
        $(document).on('click', '.btn-edit', function () {
            var productId = $(this).data('id');
            var url = '/Product/Edit/' + productId;
            loadModal('Sửa sản phẩm', url); // Tải modal với nội dung sửa
        });
    </script>
}




