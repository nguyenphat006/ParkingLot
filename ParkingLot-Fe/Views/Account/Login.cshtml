@using MODELS.TAIKHOAN
@model MODELDangNhap

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="container">
    <div class="cover">
        <div class="front">
            <img src="~/Website/img/frontImg.jpg" alt="">
            <div class="text">
                <span class="text-1">ParkingLot</span>
                <span class="text-2">Safe Parking, Happy Customer</span>
            </div>
        </div>
    </div>
    <div class="forms">
        <div class="form-content">
            <div class="login-form">
                <div class="title">Đăng nhập</div>
                <form id="loginForm" method="post" asp-action="Login" asp-controller="Account">
                    <div class="input-boxes">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="input-box">
                            <i class="fas fa-envelope"></i>
                            <input asp-for="Email" id="Email" name="Email" type="text" placeholder="Nhập Email của bạn" class="form-control" required>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <div class="input-box">
                            <i class="fas fa-lock"></i>
                            <input asp-for="MatKhau" id="MatKhau" name="MatKhau" type="password" placeholder="Nhập mật khẩu của bạn" class="form-control" required>
                        </div>
                        <span asp-validation-for="MatKhau" class="text-danger"></span>

                        <div class="float-end">
                            <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">
                                Quên mật khẩu?
                            </a>
                        </div>

                        <div class="form-check">
                            <label class="form-check-label">
                                <input asp-for="GhiNhoToi" id="GhiNhoToi" name="GhiNhoToi" class="form-check-input" type="checkbox" />
                                @Html.DisplayNameFor(a => a.GhiNhoToi)
                            </label>
                        </div>

                        <div class="button input-box">
                            <button type="submit">Đăng Nhập</button>
                        </div>

                        <div class="text sign-up-text">Không có tài khoản? <a asp-controller="Account" asp-action="Register">Đăng ký ngay</a> </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
