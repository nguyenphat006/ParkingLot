@using MODELS.TAIKHOAN;
@model MODELDangKy;

@{
    ViewData["Title"] = "Regiser";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="container">
    <div class="cover">
        <div>
            <img class="backImg" src="~/Website/img/demo2.jpg" alt="">
            <div class="text">
                <span class="text-1">Smart Parking Choices <br> Just For You</span>
                <span class="text-2">Let's get started</span>
            </div>
        </div>
    </div>
    <div class="forms">
        <div class="form-content">
            <div class="signup-form">
                <div class="title">Đăng ký</div>
                <form asp-action="Register" method="Post"> 
                    <div class="input-boxes">
                        <div class="input-box">
                            <i class="fas fa-user"></i>
                            <input asp-for="HoTen" type="text" placeholder="Nhập họ và tên" required>
                        </div>
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                        <div class="input-box">
                            <i class="fas fa-envelope"></i>
                            <input asp-for="Email" type="text" placeholder="Nhập Email của bạn" required>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="input-box">
                            <i class="fas fa-lock"></i>
                            <input asp-for="MatKhau" type="password" placeholder="Nhập mật khẩu" required>
                        </div>
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                        <div class="input-box">
                            <i class="fas fa-lock"></i>
                            <input asp-for="XacNhanMatKhau" type="password" placeholder="Xác nhận mật khẩu" required>
                        </div>
                        <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                        <div class="button input-box">
                            <input value="Register" type="submit" value="Đăng Ký">
                        </div>
                        <div class="text sign-up-text">Đã có tài khoản? <a asp-controller="Account" asp-action="Login">Đăng nhập</a> </div>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}